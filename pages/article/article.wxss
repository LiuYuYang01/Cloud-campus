/* 文章内容颜色 */
rich-text {
  color: #666;
  font-size: 28rpx;
}

/* 主要内容 */
.article {
  background-color: #fff;
  padding: 20rpx;
}

/* 用户信息 */
.article .header {
  position: relative;
  display: flex;
  width: 100%;
}

/* 头像 */
.article .header .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

/* 信息 */
.article .header .info {
  color: #333;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.article .header .info .title {
  display: flex;
  /* align-articles: center; */
  line-height: 34rpx;
  font-size: 29rpx;
}

/* 实名认证标识 */
.article .header .info .title .realnameBox {
  display: flex;
  align-articles: center;
}
.article .header .info .title .realnameBox .realname {
  width: 31rpx;
  height: 34rpx;
  margin-left: 15rpx;
}
.article .header .info .title .realnameBox .text {
  color: #666;
  margin-left: 10rpx;
  font-size: 24rpx;
}

/* 时间 */
.article .header .info .date {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 5rpx;
}

/* 关注 */
.article .header .attention {
  position: absolute;
  top: 15%;
  right: 10rpx;
  width: 90rpx;
  height: 45rpx;
  line-height: 45rpx;
  padding: 20rpx;
  border-radius: 40rpx;
  color: #4fb985;
  font-size: 34rpx;
  text-align: center;
}

/* 文章标题 */
.article > .title {
  margin-top: 10rpx;
  color: #333;
  line-height: 50rpx;
}

/* 标签 */
.article > .title .tag {
  display: inline-block;
  margin: 0 5rpx;
}

/* 文章内容 */
.article .content {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  line-height: 40rpx;
  /* 文章描述超出省略 */
  display: -webkit-box !important;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}

/* 文章图片 */
.article .picture {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  /* height: 480rpx; */
  margin-top: 20rpx;
}

.article .picture .image {
  width: 80%;
  border-radius: 10rpx;
}

/* 评论框 */
.comment {
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.comment > .title {
  padding: 20rpx 0;
  font-size: 35rpx;
  font-weight: 700;
  text-align: center;
  color: #4fb985;
  border-bottom: 2rpx solid #f5f5f5;
}

.comment .item {
  padding: 20rpx;
  padding-bottom: 50rpx;
  border-bottom: 2rpx solid #f9f9f9;
}

.comment .item .header {
  display: flex;
  align-items: center;
  height: 120rpx;
}

/* 头像 */
.comment .item .header .avatar {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}
.comment .item .header .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 操作 */
.comment .item .header .operation {
  position: absolute;
  right: 20rpx;
}

.comment .item .header .operation view {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #f53434;
}

/* 用户信息 */
.comment .item .info .title {
  font-size: 30rpx;
  color: #333;
}

/* 时间 */
.comment .item .info .date {
  font-size: 25rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 评论内容 */
.comment .item .content {
  color: #666;
  font-size: 30rpx;
}

/* 底部功能栏 */
.function {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  bottom: 0;
  height: 100rpx;
  padding: 0 20rpx;
  border-top: 2rpx solid #f5f5f5;
  background-color: #fff;
}

/* 发布评论框 */
.function .release {
  display: flex;
  align-items: center;
  width: 46%;
  height: 60rpx;
  padding: 0 20rpx;
  color: #999;
  font-size: 24rpx;
  border-radius: 100rpx;
  background-color: #f2f2f2;
}

.function .release input{
    margin-left: 10rpx;
}

/* 操作 */
.function .operation view{
    padding: 20rpx 30rpx;
    font-size: 45rpx;
    color: #333;
}