.nav {
    display: flex;
    justify-content: space-between;
    /* 水平滚动必加 */
    white-space: nowrap;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

/* 导航栏每一项 */
.nav view {
    position: relative;
    /* 水平滚动必加 */
    display: inline-block;
    width: 20%;
    color: #333;
    font-size: 30rpx;
    text-align: center;
}

/* 选中的样式 */
.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 8rpx;
    border-radius: 20rpx;
    background-color: #49b984;
}

/* 图片广告 */
.advertising {
    width: 100%;
    height: 100rpx;
    margin: 20rpx 0;
}

.advertising image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.slideNavBox{
    padding: 25rpx 0;
    border-radius: 10rpx;
    margin-top: 20rpx;
    background-color: #fff;
    box-shadow: 0 0 6rpx 2rpx rgb(0 0 0 / 3%);
}