/* 轮播图 */
.banner {
    height: 100%;
    /* margin-top: 20rpx; */
}

.banner .item {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.banner .item .image {
    width: 100%;
    height: 100% !important;
}

.banner .item .title {
    position: absolute;
    bottom: -14rpx;
    left: -60rpx;
    width: 90%;
    line-height: 44rpx;
    padding: 30rpx 100rpx;
    background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, .8) 100%);
}

.banner .item .title .text {
    font-size: 30rpx;
    color: #fff;
    /* 文本溢出省略 */
    display: -webkit-box !important;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}