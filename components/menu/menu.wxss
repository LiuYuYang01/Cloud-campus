/* 左侧功能栏 */
.menu {
    position: fixed;
    top: 0;
    left: -400rpx;
    /* left: 0 !important; */
    width: 400rpx;
    /* height: 88.4%; */
    height: 100%;
    background-color: #fff;
    box-shadow: 0 0 6rpx 2rpx rgb(0 0 0 / 10%);
    transition: all 0.3s;
    z-index: 1;
}

/* 用户信息 */
.menu .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    background: url(http://yuexing.liuyuyang.net/image/userBg.jpg) no-repeat;
    background-size: 100%;
}

/* 头像 */
.menu .header .avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #fff;
}

.menu .header .avatar .image {
    width: 90%;
    height: 90%;
    border-radius: 50%;
}

/* 用户名 */
.menu .header .name {
    margin: 10rpx 0;
}

/* 用户身份 */
.menu .header .identity {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.menu .header .identity .image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 7rpx;
}

/* 遮罩层 */
.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
}