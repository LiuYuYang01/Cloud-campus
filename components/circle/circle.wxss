/* 入口导航 */
.circle {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    /* margin-left: 25rpx; */
}

.circle .item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 17%;
    padding: 17rpx 28rpx;
}

.circle .item .icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 10rpx;
    border-radius: 40rpx;
    color: #fff;
    background-color: #4fb985;
}

.circle .item .icon .van{
    font-size: 50rpx !important;
}

.circle .item .icon .text {
    font-size: 50rpx;
}

.circle .item .title {
    font-size: 24rpx;
    color: #333;
    margin-top: 10rpx;
}