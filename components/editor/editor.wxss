@import "/assets/iconfont.wxss";

page {
    width: 740rpx;
    margin: 0 auto;
}

.container{
    position: relative;
}

.ql-container{
    overflow: auto;
    padding: 20rpx;
    /* padding-top: 100rpx; */
    height: 600rpx;
    background-color: #fff;
}

.iconfont {
    display: inline-block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    color: #777;
    font-size: 20px;
    text-align: center;
    cursor: pointer;
}

/* 工具栏 */
.toolbar {
    position: sticky;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    padding: 0 20rpx;
    border-left: none;
    border-right: none;
    /* border-bottom: 2rpx solid #ECECEC; */
    background-color: #fff;
    box-sizing: border-box;
    transition: all 0.3s;
    z-index: 1;
}

.release{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    background-color: #4fb985 !important;
}