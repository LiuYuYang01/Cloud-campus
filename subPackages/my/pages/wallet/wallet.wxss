/* subPackages/my/pages/wallet/wallet.wxss */
.wallet-root {padding: 30rpx;}

/* 蓝色浅变盒子 */
.balance-box {
    /* border: 1px solid red; */
    height: 300rpx;
    border-radius: 25rpx;
    background-image: linear-gradient(60deg, #4facfe 0%, #00f2fe 100%);
    position: relative;
    overflow: hidden;
    box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;
}
.balance {
    /* border: 1px solid red; */
    width: 300rpx;
    height: 100rpx;
    color: white;
    position: absolute;
    top: 55rpx;
    left: 50rpx;
}
/* 余额 */
.balance > view:nth-child(1) {
    font-size: 28rpx;
}
/* ￥ */
.balance > view:nth-child(2) text {
    font-size: 30rpx;
}
/* money */
.balance > view:nth-child(2) {
    font-size: 65rpx;
    font-weight: 700;
}
/* rule */
.rule {
    /* background-color: red; */
    border-top: 3rpx dashed gainsboro;
    box-sizing: border-box;
    color: white;
    font-size: 25rpx;
    width: 100%;
    height: 50rpx;
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0 30rpx;
}
/* ===================== */
.pay-box {
    /* border: 1px solid red; */
    box-sizing: border-box;
    height: 260rpx;
    margin-top: 25rpx;
    position: relative;
}
/* 选择充值 */
.pay-box > view:nth-child(1) {
    display: flex;
    justify-content: space-between;
    height: 40rpx;
}
/* 金额 box */
.top-up {
    /* background-color: rosybrown; */
    position: absolute;
    top: 50%;
    transform: translateY(-45%);
    box-sizing: border-box;
    height: 160rpx;
    width: 100%;
    display: flex;
}
/* 金额 items */
.top-up > view {
    /* border: 1px solid red; */
    flex: 1;
    border-radius: 20rpx;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    font-weight: 700;
}
/* 金额 中间间隙 */
.top-up > view:nth-child(2) {
    margin: 0 20rpx;
}
.top-up > view > text {
    font-weight: normal;
}
/* ================= */
/* 覆盖第三方组件样式 */
.van-tabs__scroll--card {
    margin: 0 !important;
    width: 100% !important;
    background-color: gainsboro !important;
    /* padding: 10rpx 0; */
    border: none !important;
    border-radius: 20rpx !important;
    overflow: hidden;
}