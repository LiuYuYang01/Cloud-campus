/* 波浪效果 */
.zr {
  color: #fff;
  width: 100%;
  height: 150rpx;
  position: absolute;
  bottom: 0;
}
.water {
  position: absolute;
  left: 0;
  bottom: 20rpx;
  height: 60rpx;
  width: 100%;
  z-index: 1;
}
.water-c {
  position: relative;
}
.water-1 {
  background: url("data:image/svg+xml;base64,")
    repeat-x;
  background-size: 1200rpx;
  -webkit-animation: wave-animation-1 3.5s infinite linear;
  animation: wave-animation-1 3.5s infinite linear;
}
.water-2 {
  top: 10rpx;
  background: url("data:image/svg+xml;base64,")
    repeat-x;
  background-size: 1200rpx;
  -webkit-animation: wave-animation-2 6s infinite linear;
  animation: wave-animation-2 6s infinite linear;
}
.water-1,
.water-2 {
  position: absolute;
  width: 100%;
  height: 70rpx;
}
.back-white {
  background: #fff;
}
@keyframes wave-animation-1 {
  0% {
    background-position: 0 top;
  }
  100% {
    background-position: 1200rpx top;
  }
}
@keyframes wave-animation-2 {
  0% {
    background-position: 0 top;
  }
  100% {
    background-position: 1200rpx top;
  }
}

.title {
  position: relative;
  font-size: 40rpx;
  color: #fff;
}

.arrow {
  position: absolute;
  top: 50rpx;
  left: 20rpx;
  padding: 20rpx;
}

.flower {
    position: absolute;
    top: 320rpx;
    right: 0;
    padding: 20rpx;
    font-size: 60rpx;
}

/* 背景 */
.top {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: url(https://img.zmtc.com/2020/0525/20200525104223150.jpg) no-repeat;
  background-size: cover;
}

/* 用户信息 */
.top .userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
  color: #fff;
  text-align: center;
}

/* 用户头像 */
.top .userInfo .avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
}

.top .userInfo .avatar image {
  width: 92%;
  height: 92%;
  border-radius: 50%;
}

/* 用户名称 */
.top .userInfo .name {
  padding: 20rpx 0;
}

/* 用户签名 */
.top .userInfo .autograph {
  width: 450rpx;
  font-size: 24rpx;
}

/* 统计 */
.top .userInfo .statistics {
  font-size: 24rpx;
