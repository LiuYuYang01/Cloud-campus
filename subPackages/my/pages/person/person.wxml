<!-- 头部 -->
<view class="header">
    <!-- 波浪 -->
    <view class="zr">
        <view class="water">
            <view class="water-c">
                <view class="water-1"> </view>
                <view class="water-2"> </view>
            </view>
        </view>
    </view>

    <view class="title">
        <view class="arrow">
            <van-icon name="arrow-left" />
        </view>

        <view class="flower">
            <van-icon name="flower-o" />
        </view>
    </view>

    <!-- 用户信息 -->
    <view class="userInfo">
        <!-- 头像 -->
        <view class="avatar">
            <image src="http://q1.qlogo.cn/g?b=qq&nk=3311118881&s=640" mode="" />
        </view>

        <!-- 用户名称 -->
        <view class="name">刘宇阳</view>

        <!-- 用户签名 -->
        <view class="autograph">互联网从不缺乏天才，而努力才是最终的入场券</view>

        <!-- 统计 -->
        <view class="statistics">
            <text>粉丝（10）</text>
            <text>关注（3）</text>
            <text>获赞（99+）</text>
        </view>
    </view>
</view>

