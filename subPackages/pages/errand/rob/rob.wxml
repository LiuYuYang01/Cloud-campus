<van-dialog id="van-dialog" showCancelButton="{{true}}" confirm-button-color="#6680fb" />

<van-tabs active="{{ Tab }}" color="#5a82fd" bind:change="Tab">
    <!-- 轮播图 -->
    <swiper list="{{swiperList}}" style="margin: 20rpx;" />

    <van-notice-bar left-icon="volume-o" text="遇到任何问题请到维权板块进行维权或联系平台管理员" />

    <van-tab title="抢单">
        <order list="{{ orderList }}" bind:getTaskList="getTaskList"/>
    </van-tab>

    <van-tab title="待取货">
        <order list="{{ laterOrderList }}" />
    </van-tab>

    <van-tab title="我的跑单">
        <order list="{{ myOrderList }}" />
    </van-tab>
</van-tabs>


<van-tabbar active="{{ 1 }}" bind:change="selectTabBar">
    <van-tabbar-item icon="home-o">首页</van-tabbar-item>
    <van-tabbar-item icon="refund-o">抢单</van-tabbar-item>
    <van-tabbar-item icon="medal-o">订单</van-tabbar-item>
    <van-tabbar-item icon="balance-o">我的</van-tabbar-item>
</van-tabbar>