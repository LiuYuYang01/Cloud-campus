/* 订单支付布局 */
.pay{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 500rpx;
}

.pay .title{
    padding-top: 30rpx;
}

.pay .price{
    font-size: 60rpx;
    margin: 20rpx 0;
    margin-left: -30rpx;
}

.pay .define{
    padding-bottom: 30rpx;
}
.pay .define .van-button--primary{
    width: 400rpx;
    height: 80rpx;
    border-radius: 50rpx;
}

.van-field__label--disabled {
  color: #333 !important;
}

.van-radio-group--horizontal {
  padding: 20rpx 0;
  justify-content: center;
  background-color: #fff;
}

.release {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx auto;
  color: #fff;
  border-radius: 40rpx;
  background-color: #6680fb;
  text-align: center;
}
