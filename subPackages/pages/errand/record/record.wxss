.container-list {
  padding: 20rpx;
  margin-top: 10rpx;
  /* min-height: 480rpx;
      height: auto; */
  background-color: white;
}

/* 用户信息 */
.header {
  position: relative;
  display: flex;
  height: 80rpx;
  padding-bottom: 10rpx;
  /* border-bottom: 1rpx dashed gainsboro; */
}

/* 头像 */
.header .avatar {
  width: 80rpx;
  height: 100%;
  border-radius: 50%;
}

/* 信息 */
.header .info {
  color: #333;
  font-size: 30rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: center;
}

/* 用户名 */
.header .info .title {
  display: flex;
  /* align-items: center; */
  line-height: 34rpx;
  font-size: 29rpx;
}

/* 时间 */
.header .info .date {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 5rpx;
}

/* 金额 */
.header .attention {
  position: absolute;
  top: 20%;
  right: 10rpx;
  width: 90rpx;
  height: 45rpx;
  line-height: 45rpx;
  color: #ff5656;
  font-size: 28rpx;
  font-weight: 700;
}

/* 备注 */
.remarks {
  padding: 10rpx;
  margin-top: 20rpx;
  border: 4rpx dashed gainsboro;
  text-align: center;
}

/* 备注内容 */
.remarks > text {
  /* color: gray; */
  font-size: 25rpx;
}

/* 取送/接单按钮 */
.operation > view {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 40rpx;
  padding: 20rpx 0;
}

.operation > view > text:nth-child(1) {
  color: white;
  background-color: orange;
  border-radius: 50rpx;
  padding: 6rpx 25rpx;
}

.operation > view > text:nth-child(2) {
  color: white;
  background-color: skyblue;
  border-radius: 50rpx;
  padding: 6rpx 25rpx;
}

.operation > view > text text {
  font-size: 28rpx;
  color: #fff;
  margin-left: 10rpx;
  padding-bottom: 5rpx;
  /* border-bottom: 1px solid gray; */
}

.container-list .meet {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 10rpx;
  text-align: center;
  color: #fff;
  border-radius: 100rpx;
  background-color: #5a82fd;
}

.box > view {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.box .title {
  padding: 10rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
  color: #666;
  background-color: #f6f6f7;
}

.box .info {
  flex: 7;
  color: #333;
}

.box .remark {
  color: #999;
  font-size: 28rpx;
  margin-left: 25rpx;
}

.container-list:last-of-type {
  margin-bottom: 180rpx;
}

/* 投诉 */
.complaint{
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}