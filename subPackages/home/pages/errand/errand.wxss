/* subPackages/home/pages/errand/errand.wxss */
page {
    background-color: #f0f0f0;
}

.container-list {
    padding: 20rpx;
    margin-top: 10rpx;
    /* min-height: 480rpx;
    height: auto; */
    background-color: white;
}

/* 用户信息 */
.header {
    position: relative;
    display: flex;
    height: 80rpx;
    padding-bottom: 10rpx;
    /* border-bottom: 1rpx dashed gainsboro; */
}

/* 头像 */
.header .avatar {
    width: 80rpx;
    height: 100%;
    border-radius: 50%;
}

/* 信息 */
.header .info {
    color: #333;
    font-size: 30rpx;
    margin-left: 30rpx;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
}

/* 用户名 */
.header .info .title {
    display: flex;
    /* align-items: center; */
    line-height: 34rpx;
    font-size: 29rpx;
}

/* 时间 */
.header .info .date {
    font-size: 24rpx;
    color: #bbb;
    margin-top: 5rpx;
}

/* 金额 */
.header .attention {
    position: absolute;
    top: 20%;
    right: 10rpx;
    width: 90rpx;
    height: 45rpx;
    line-height: 45rpx;
    color: #e96053;
    font-size: 28rpx;
    font-weight: 700;
}

/* 备注 */
.remarks {
    padding: 10rpx;
    margin-top: 20rpx;
    border: 4rpx dashed gainsboro;
    text-align: center;
}

/* 备注内容 */
.remarks>text {
    /* color: gray; */
    font-size: 25rpx;
}

/* 取送/接单按钮 */
.operation>view {
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 40rpx;
    padding: 20rpx 0;
}

.operation>view>text:nth-child(1) {
    color: white;
    background-color: orange;
    border-radius: 50rpx;
    padding: 6rpx 25rpx;
}

.operation>view>text:nth-child(2) {
    color: white;
    background-color: skyblue;
    border-radius: 50rpx;
    padding: 6rpx 25rpx;
}

.operation>view>text text {
    font-size: 28rpx;
    color: #fff;
    margin-left: 10rpx;
    padding-bottom: 5rpx;
    /* border-bottom: 1px solid gray; */
}

.container-list .meet{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
margin-bottom: 10rpx;
    text-align: center;
    color: #fff;
    border-radius: 100rpx;
    background-color: #ee6051;
}

/* 我的 */
.journey-info {
    position: relative;
    border-top: 1.5px dashed gainsboro;
    border-bottom: 1.5px dashed gainsboro;
    padding: 20rpx 0;
    margin: 20rpx 0;
}

.result1 {
    font-weight: 700;
    color: #666 !important;
}
.result2 {
    font-weight: 700;
    color: #ffc13a !important;
}
.result3 {
    font-weight: 700;
    color: #00b26a !important;
}
.journey-info>view:nth-child(1),
.journey-info>view:nth-child(2),
.journey-info>view:nth-child(3) {
    font-size: 30rpx;
    color: gray;
    margin-bottom: 10rpx;
}

.journey-info>text {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    color: #e96053;
    font-weight: 700;
    font-size: 34rpx;
}

.journey-info>text text {
    font-size: 25rpx;
}
.container-my > .operating-btn {
    /* border: 1px solid red; */
    text-align: right;
}