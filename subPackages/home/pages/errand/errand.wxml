<van-dialog id="van-dialog" showCancelButton="{{true}}" />

<van-tabs active="{{ Tab }}" color="#e96053" bind:change="Tab">
    <!-- 轮播图 -->
    <swiper list="{{swiperList}}" style="margin: 20rpx;" />

    <view style="margin-top: 60rpx;">
        <van-notice-bar left-icon="volume-o" text="遇到任何问题请到维权板块进行维权或联系平台管理员"/>
    </view>

    <van-tab title="跑单列表">
        <view class="container-list">
            <!-- 头像/发布时间/金额 -->
            <view class="header">
                <view>
                    <image src="https://img.yzcdn.cn/vant/cat.jpeg" class="avatar"></image>
                </view>

                <view class="info">
                    <view class="title">
                        name
                    </view>
                    <view class="date">刚刚</view>
                </view>

                <view class="attention">10.5元</view>
            </view>
            <!-- 备注内容 -->
            <view class="remarks">
                <text style="color:#666">备注：到了放在教室门口谢谢</text>
            </view>
            <!-- 取送/接单按钮 -->
            <view class="operation">
                <view>
                    <text>取<text>食堂油泼面</text></text>
                    <text>送<text>宿舍1号楼</text></text>
                </view>
            </view>

            <view class="meet" bindtap="meet">接单</view>
        </view>
    </van-tab>

    <van-tab title="我的跑单">
        <view class="container-list container-my">
            <view class="header">
                <image src="https://img.yzcdn.cn/vant/cat.jpeg" class="avatar"></image>
                <view class="info">
                    <view class="title">
                        黎活銘
                    </view>
                    <view class="date">2022-03-31 14:55</view>
                </view>

                <view class="attention">
                    <view class="result1">待接单</view>
                    <!-- <view class="result2">已完成</view> -->
                    <!-- <view class="result3">进行中</view> -->
                </view>
            </view>
            <view class="journey-info">
                <view>
                    <van-icon name="location" color="#ffa500" style="margin: 0 2rpx 0 10rpx;" />
                    杂粮煎饼
                </view>
                <view>
                    <van-icon name="location" color="#4fb985" style="margin: 0 2rpx 0 10rpx;" />
                    教室 108
                </view>
                <view>
                    <van-icon name="comment" color="gray" style="margin: 0 2rpx 0 10rpx;" />
                    <text>备注：到了放在教室门口谢谢</text>
                </view>
                <text>10.5 <text>元</text></text>
            </view>
            <view class="operating-btn">
                <van-button type="info" size="small" color="#4fb985" bindtap="service">送达</van-button>
                <!-- <van-button type="danger" size="small">删除</van-button> -->
            </view>
        </view>
    </van-tab>
</van-tabs>